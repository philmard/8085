
START:
	IN 10H	

L1:
	MVI A,FEH	; arxikopoihsh tou A = 1h grammh
	STA 2800H
	LDA 1800H	; diavase sthlh
	MVI B,07H
	ANA B		; 3LSB
	MVI C,86H	; INSTR STEP
	CPI 06H
	JZ DISPLAY
	MVI C,85H	; FETCH PC
	CPI 05H
	JZ DISPLAY
